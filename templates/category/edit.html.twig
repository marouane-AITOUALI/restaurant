{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie {{ category.name }}{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        {# En-tête avec navigation #}
        <div class="mb-8 flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <a href="{{ path('app_category_index') }}" 
                   class="flex items-center text-amber-600 hover:text-amber-700 transition duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Retour à la liste
                </a>
            </div>
        </div>

        {# Titre principal #}
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                Modifier la catégorie
            </h1>
            <p class="text-gray-600">
                {{ category.name }}
            </p>
        </div>

        {# Carte principale #}
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            {# Formulaire d'édition #}
            {{ include('category/_form.html.twig', {
                'button_label': 'Mettre à jour'
            }) }}
        </div>
        {{ include('category/_delete_form.html.twig') }}
    </div>

    {# Notification de succès (à afficher conditionnellement) #}
    {% for message in app.flashes('success') %}
        <div class="fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center" 
             x-data="{ show: true }" 
             x-show="show" 
             x-init="setTimeout(() => show = false, 3000)">
            <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
{% endblock %}