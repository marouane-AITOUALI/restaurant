{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        {# En-tête avec navigation #}
        <div class="mb-8">
            <div class="md:flex md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-3xl font-bold text-amber-900 mb-2">
                        Créer une nouvelle catégorie
                    </h1>
                    <p class="text-sm text-gray-600">
                        Ajoutez une nouvelle catégorie pour organiser vos plats
                    </p>
                </div>
            </div>
        </div>

        {# Messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %}"
                     x-data="{ show: true }" 
                     x-show="show" 
                     x-init="setTimeout(() => show = false, 3000)">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Formulaire #}
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                {{ include('category/_form.html.twig', {
                    'button_label': 'Créer la catégorie'
                }) }}
            </div>
        </div>

        {# Actions secondaires #}
        <div class="mt-6 flex justify-center space-x-4">
            <a href="{{ path('app_category_index') }}" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium 
                      text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 
                      focus:ring-offset-2 focus:ring-amber-500 transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
{% endblock %}