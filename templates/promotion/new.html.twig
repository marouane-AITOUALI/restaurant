{% extends 'base.html.twig' %}

{% block title %}Reservation Index{% endblock %}

{% block body %}
    <div class="p-6 bg-gray-50 min-h-screen">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4">Reservation Index</h1>

        <div class="bg-white shadow rounded-lg p-4">
            <div class="overflow-x-auto">
                <div class="min-w-full grid grid-cols-8 gap-4 text-left text-sm font-medium text-gray-600 bg-amber-100 p-2 rounded-t-lg">
                    <span>Id</span>
                    <span>Date</span>
                    <span>Status</span>
                    <span>Is Event</span>
                    <span>Phone</span>
                    <span>Number of People</span>
                    <span>Notes</span>
                    <span>Actions</span>
                </div>
                {% for reservation in reservations %}
                    <div class="min-w-full grid grid-cols-8 gap-4 text-left text-sm text-gray-700 p-2 border-b border-gray-200 hover:bg-gray-50">
                        <span>{{ reservation.id }}</span>
                        <span>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</span>
                        <span>{{ reservation.status }}</span>
                        <span>{{ reservation.isEvent ? 'Yes' : 'No' }}</span>
                        <span>{{ reservation.phone }}</span>
                        <span>{{ reservation.numberOfPeople }}</span>
                        <span>{{ reservation.notes }}</span>
                        <div class="flex space-x-2">
                            <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}" class="text-blue-500 hover:text-blue-600">Show</a>
                            <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}" class="text-amber-500 hover:text-amber-600">Edit</a>
                        </div>
                    </div>
                {% else %}
                    <div class="min-w-full text-center text-gray-500 p-4">
                        No records found
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_reservations_new') }}" class="inline-block px-4 py-2 bg-amber-500 text-white rounded-md shadow hover:bg-amber-600">
                Create New
            </a>
        </div>
    </div>
{% endblock %}
