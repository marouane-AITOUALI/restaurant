{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">Promotion</h1>

        <table class="min-w-full bg-white rounded-lg shadow-md">
            <tbody>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Id</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ promotion.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Pourcentage</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ promotion.pourcentage }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Date de d√©but</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ promotion.dateDebut ? promotion.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Date de fin</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ promotion.datefin ? promotion.datefin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex justify-between items-center mt-6">
            <a href="{{ path('app_promotion_index') }}" class="text-amber-500 hover:text-amber-600 font-medium">Back to list</a>
            <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}" class="text-amber-500 hover:text-amber-600 font-medium">Edit</a>
            {{ include('promotion/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}