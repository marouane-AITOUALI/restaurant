{{ form_start(form, { 'attr': { 'class': 'space-y-6 max-w-xl mx-auto p-6 bg-white shadow-lg rounded-lg border border-gray-200' } }) }}

    {% for field in form %}
        <div class="space-y-2">
            {{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(field, { 'attr': { 'class': 'w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200' } }) }}
            {{ form_errors(field) }}
        </div>
    {% endfor %}

    <button type="submit" 
            class="w-full px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none 
                   focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200 ease-in-out">
        {{ button_label is defined ? button_label : 'Enregistrer' }}
    </button>

{{ form_end(form) }}
