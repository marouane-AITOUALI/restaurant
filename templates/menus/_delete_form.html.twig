<form method="post" 
      action="{{ path('app_menus_delete', {'id': menu.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce menu ? Cette action est irréversible.')"
      x-data="{ hover: false }"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
    <button type="submit" 
            @mouseenter="hover = true"
            @mouseleave="hover = false"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium
                   text-white bg-red-600 hover:bg-red-700 
                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500
                   transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" 
             class="w-5 h-5 mr-2 transition-transform duration-200"
             :class="{ 'rotate-12': hover }"
             fill="none" 
             viewBox="0 0 24 24" 
             stroke="currentColor">
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span :class="{ 'translate-x-0.5': hover }" class="transition-transform duration-200">
            Supprimer ce menu
        </span>
    </button>
</form>