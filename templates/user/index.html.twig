{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">User Index</h1>

        <table class="min-w-full bg-white rounded-lg shadow-md">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Id</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Roles</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">First Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Last Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Archived</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Verified</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-b">
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.id }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.email }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.firstName }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.lastName }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.estArchive }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td class="px-6 py-4 text-sm text-gray-700 space-x-4 flex">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-amber-500 hover:text-amber-600 font-medium">
                            <span class="sr-only">Voir</span>
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                        </a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-amber-500 hover:text-amber-600 font-medium">
                            <span class="sr-only">Modifier</span>
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="px-6 py-4 text-center text-sm text-gray-500">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-6 flex justify-end">
            <a href="{{ path('app_user_new') }}" class="inline-block px-6 py-3 bg-amber-500 text-white font-medium text-sm rounded-lg shadow-md bg-amber-600 transition duration-200 ease-in-out">
                Create New
            </a>
        </div>
    </div>
{% endblock %}