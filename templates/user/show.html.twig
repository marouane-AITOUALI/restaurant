{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">User</h1>

        <table class="min-w-full bg-white rounded-lg shadow-md">
            <tbody>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Id</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Email</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.email }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Roles</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">First Name</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.firstName }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Last Name</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.lastName }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Archived</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.estArchive }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Verified</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-6 flex justify-between items-center">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-block px-6 py-3 bg-amber-500 text-white font-medium text-sm rounded-lg shadow-md bg-amber-600 transition duration-200 ease-in-out">Edit</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
        <div class="mt-6 flex justify-center">
            <a href="{{ path('app_user_index') }}" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium 
                      text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 
                      focus:ring-offset-2 focus:ring-amber-500 transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to list
            </a>
        </div>
    </div>
{% endblock %}