{{ form_start(form, {
    'attr': {
        'class': 'space-y-6',
        'novalidate': 'novalidate'
    }
}) }}
<div class="space-y-6">
    {# Boucle sur chaque champ pour un rendu personnalisé #}
    {% for field in form %}
        <div class="space-y-2">
            {# Label stylisé #}
            {{ form_label(field, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-gray-700'
                }
            }) }}

            {# Champ de formulaire avec style #}
            {{ form_widget(field, {
                'attr': {
                    'class': 'block px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-amber-500 focus:border-amber-500 sm:text-sm'
                }
            }) }}

            {# Affichage des erreurs, si présentes #}
            {{ form_errors(field) }}
        </div>
    {% endfor %}

    {# Bouton de soumission avec icône #}
    <div class="flex justify-end pt-6">
        <button type="submit" 
                class="inline-flex items-center px-6 py-3 bg-amber-500 text-white font-medium text-sm rounded-lg shadow-md bg-amber-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition duration-200 ease-in-out">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 4v16m8-8H4"></path>
            </svg>
            {{ button_label|default('Save') }}
        </button>
    </div>
</div>
{{ form_end(form) }}
