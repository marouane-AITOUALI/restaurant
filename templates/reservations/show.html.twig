{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 bg-gray-100 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">Reservation</h1>

        <table class="min-w-full bg-white rounded-lg shadow-md">
            <tbody>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Id</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Date</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Status</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.status }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Is Event</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.isEvent }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Phone</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.phone }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Number of People</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.numberOfPeople }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Notes</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ reservation.notes }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex justify-between items-center mt-6">
            <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}" class="text-amber-500 hover:text-amber-600 font-medium">Edit</a>
            {{ include('reservations/_delete_form.html.twig') }}
        </div>
        <div class="mt-6 flex justify-center space-x-4">
            <a href="{{ path('app_reservations_index') }}" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium 
                      text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 
                      focus:ring-offset-2 focus:ring-amber-500 transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Retour Ã  la liste
            </a>
        </div>
    </div>
{% endblock %}