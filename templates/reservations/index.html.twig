{% extends 'base.html.twig' %}

{% block title %}Reservation Index{% endblock %}

{% block body %}
    <div class="p-8 bg-gray-50 min-h-screen">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Reservation Index</h1>

        <div class="overflow-x-auto">
            <table class="w-full border-collapse bg-white shadow-md rounded-lg overflow-hidden">
                <thead class="bg-amber-500 text-black">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Id</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Date</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Status</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Is Event</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Phone</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Number of People</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Notes</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                {% for reservation in reservations %}
                    <tr class="hover:bg-gray-100">
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.id }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.status }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.isEvent ? 'Yes' : 'No' }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.phone }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.numberOfPeople }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700">{{ reservation.notes }}</td>
                        <td class="px-6 py-4 text-sm text-gray-700 space-x-4 flex">
                            <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}" class="text-amber-600 hover:text-amber-900">
                                <span class="sr-only">Voir</span>
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </a>
                            <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}" class="text-amber-600 hover:text-amber-900">
                                <span class="sr-only">Modifier</span>
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-4 text-center text-sm text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex justify-end">
    <a href="{{ path('app_reservations_new') }}" class="inline-flex items-center px-6 py-3 bg-amber-500 text-white font-medium text-sm rounded-lg shadow-md bg-amber-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Create New</span>
    </a>
</div>
    </div>
{% endblock %}
