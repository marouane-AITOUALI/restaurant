{% extends 'base.html.twig' %}

{% block title %}Modifier le Commentaire{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-amber-900 text-center mb-6">Modifier le Commentaire</h1>

        <div class="space-y-6">
            {{ include('commentaire/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_commentaire_index') }}" class="text-blue-600 hover:text-blue-800 hover:underline transition duration-200">
                Retour à la liste des commentaires
            </a>
        </div>

        <div class="mt-8 text-center">
            {{ include('commentaire/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}